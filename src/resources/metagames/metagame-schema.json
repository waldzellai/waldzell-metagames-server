{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "category", "subcategory", "complexity", "type"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": ["software-development", "product-development", "project-management", 
                "operations-research", "mcp-ecosystem", "meta-learning"]
    },
    "subcategory": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["game", "protocol", "quest", "sprint", "mechanism", "framework"]
    },
    "complexity": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced", "expert"]
    },
    "estimatedDuration": {
      "type": "string",
      "pattern": "^\\d+[mhd]$"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "relatedMetagames": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "deprecated": {
      "type": "boolean",
      "default": false
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  }
}